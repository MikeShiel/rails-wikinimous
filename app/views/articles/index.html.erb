

<div class="container">
<h1>Rails Wikinimious</h1>
<ul>
<% @articles.each do |article| %>

  <li><%= (Kramdown::Document.new(article.title).to_html).html_safe %>
    <%= link_to "show", article_path(article) %>
    <%= link_to "destroy", article_path(article), method: :delete  %>
    <%= link_to "edit", edit_article_path(article)  %>
  </li>

<% end %>
</ul>
<%= link_to "new_article", new_article_path %>
</div>
